<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="Notifications">

        <CheckBoxPreference
            android:key="checkbox_preference"
            android:title="Notifications on"
            android:summary="Do you want to receive notifications?" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="Your name">

        <EditTextPreference
            android:key="edittext_preference"
            android:title="Your name"
            android:summary="How do you want to be addressed?"
            android:dialogTitle="dialog_title_edittext_preference" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="Notification Frequency">
        <ListPreference
            android:key="select_timing"
            android:title="Notifications Timing Preference"
            android:entries="@array/frequency_options"
            android:entryValues="@array/frequency_options"
            android:dialogTitle="Select Frequency of Notitifications"/>
    </PreferenceCategory>

</PreferenceScreen>